#cloud-config
vyos_config_commands:
  - set system host-name '{{ hostname }}.k8s.kgb33.dev'
  - set service ntp server 1.pool.ntp.org
  - set service ntp server 2.pool.ntp.org
  - delete interfaces ethernet eth0 address 'dhcp'
  - set interfaces ethernet eth0 description 'LAB'
  - set interfaces ethernet eth0 vif 9 address '10.0.9.{{ ip_last_byte }}/24'
  - set interfaces ethernet eth1 description 'K8S'
  - set interfaces ethernet eth1 vif 8
  - set protocols static route 0.0.0.0/0 next-hop '10.0.9.1'
